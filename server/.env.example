# Database (PostgreSQL for production)
# Neon: postgresql://user:password@host/dbname?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/stogram?schema=public"

# Server
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-change-in-production

# Client URL (comma-separated for multiple origins)
CLIENT_URL=http://localhost:5173

# Redis (optional)
REDIS_URL=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=

# VAPID keys for push notifications (optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=
